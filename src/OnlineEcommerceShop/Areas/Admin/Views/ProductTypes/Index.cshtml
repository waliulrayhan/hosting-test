@using OnlineEcommerceShop.Models;
@model IEnumerable<ProductTypes>
@{
    ViewData["title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col">
        <h3 class="text-info">Product Type List</h3>
    </div>
</div>
<div class="row">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus" style="color: #ffffff;"></i> New Product Type</a>
    </div>
</div>
<br />
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c=>c.ProductType)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductType</td>
                <td>
                    <partial name="_ButtonPartial" model="@item.Id">
                </td>
            </tr>
        }
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var save = "Successfully Saved";
            if(save!=null){
                alertify.success(save);
            }
        })
    </script>
}